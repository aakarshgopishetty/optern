{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=JobPortal.db"
  },
  "AllowedCorsOrigins": [
    "https://yourdomain.com",
    "https://www.yourdomain.com"
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "JobPortalAPI.Middleware.RequestLoggingMiddleware": "Error",
      "JobPortalAPI.Middleware.RateLimitingMiddleware": "Warning",
      "JobPortalAPI.Middleware.ValidationMiddleware": "Warning"
    }
  },
  "AllowedHosts": "yourdomain.com,www.yourdomain.com",
  "Jwt": {
    "Issuer": "JobPortalAPI",
    "Audience": "JobPortalFrontend",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "Security": {
    "PasswordMinLength": 8,
    "PasswordRequireUppercase": true,
    "PasswordRequireLowercase": true,
    "PasswordRequireDigit": true,
    "PasswordRequireSpecialChar": true,
    "MaxLoginAttempts": 5,
    "LockoutDurationMinutes": 30,
    "RateLimitRequestsPerMinute": 100,
    "RateLimitRequestsPerHour": 2000
  }
}
